{% set person = admin_card %}

<div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100 mb-8 hover:shadow-2xl transition-shadow">
    {% if person.role == 'director' %}
    {# Director - Large horizontal card #}
    <div class="md:flex">
        <!-- Photo -->
        <div class="md:w-1/3 bg-gradient-to-br from-blue-50 to-indigo-100 p-8 flex items-center justify-center">
            {% if person.photo %}
            <img src="{{ person.photo }}" alt="{{ person.name }}" class="w-64 h-64 rounded-full object-cover shadow-lg">
            {% else %}
            <div class="w-64 h-64 rounded-full bg-white shadow-lg flex items-center justify-center text-gray-400 text-6xl">
                üë§
            </div>
            {% endif %}
        </div>
        
        <!-- Info -->
        <div class="md:w-2/3 p-8">
            <div class="mb-4">
                <span class="inline-block px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold mb-4">
                    {{ person.position }}
                </span>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">{{ person.name }}</h2>
            
            <div class="space-y-4 text-gray-700 leading-relaxed">
                {% if person.category %}
                <p class="font-semibold text-blue-900">{{ person.category }}</p>
                {% endif %}
                
                {% if person.description %}
                <div class="prose prose-sm max-w-none">
                    {{ person.description | safe }}
                </div>
                {% endif %}
                
                {% if person.education %}
                <div class="bg-gray-50 rounded-lg p-6 mt-6">
                    <h3 class="font-bold text-lg mb-4 text-gray-900">üéì –û—Å–≤—ñ—Ç–∞ —Ç–∞ –∫–≤–∞–ª—ñ—Ñ—ñ–∫–∞—Ü—ñ—è:</h3>
                    <ul class="space-y-3">
                        {% for edu in person.education %}
                        <li class="flex gap-3">
                            <span class="text-blue-600 font-bold">{{ edu.year }}</span>
                            <span>{{ edu.details }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% else %}
    {# Deputy - Vertical card #}
    <div class="bg-gradient-to-br from-indigo-50 to-blue-100 p-8 flex justify-center">
        {% if person.photo %}
        <img src="{{ person.photo }}" alt="{{ person.name }}" class="w-48 h-48 rounded-full object-cover shadow-lg">
        {% else %}
        <div class="w-48 h-48 rounded-full bg-white shadow-lg flex items-center justify-center text-gray-400 text-5xl">
            üë§
        </div>
        {% endif %}
    </div>
    <div class="p-6">
        <div class="mb-3">
            <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-xs font-semibold">
                {{ person.position }}
            </span>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-4">{{ person.name }}</h3>
        <div class="space-y-2 text-gray-700 text-sm">
            {% if person.category %}
            <p><strong>–ö–∞—Ç–µ–≥–æ—Ä—ñ—è:</strong> {{ person.category }}</p>
            {% endif %}
            {% if person.institution %}
            <p><strong>–û—Å–≤—ñ—Ç–∞:</strong> {{ person.institution }}</p>
            {% endif %}
            {% if person.specialty %}
            <p><strong>–°–ø–µ—Ü—ñ–∞–ª—å–Ω—ñ—Å—Ç—å:</strong> {{ person.specialty }}</p>
