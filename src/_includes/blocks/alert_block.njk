{% set colorClasses = {
  'blue': 'bg-blue-50 border-blue-500',
  'red': 'bg-red-50 border-red-500',
  'green': 'bg-green-50 border-green-500',
  'amber': 'bg-amber-50 border-amber-500',
  'cyan': 'bg-gradient-to-r from-cyan-50 to-blue-50 border-cyan-500',
  'info': 'bg-blue-50 border-blue-500',
  'success': 'bg-green-50 border-green-500',
  'warning': 'bg-amber-50 border-amber-500',
  'error': 'bg-red-50 border-red-500',
  'note': 'bg-purple-50 border-purple-500'
} %}

{% set variant = block.variant or 'info' %}
{% set classes = colorClasses[variant] or colorClasses['info'] %}

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="prose prose-lg prose-teal mx-auto text-secondary">
      <div class="{{ classes }} border-l-4 p-6 rounded-r-lg">
        {% if block.title %}
          <h3 class="mt-0 mb-4 font-bold">{{ block.title }}</h3>
        {% endif %}
        {{ block.content | markdownify | safe }}
      </div>
    </div>
  </div>
</section>
