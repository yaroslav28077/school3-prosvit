<div class="my-8 max-w-4xl mx-auto">
    {% if block.title %}
        <h3 class="text-xl font-bold mb-4 text-gray-800">{{ block.title }}</h3>
    {% endif %}
    <div class="relative w-full aspect-video rounded-xl overflow-hidden shadow-lg border border-gray-100">
        <iframe 
            src="https://www.youtube.com/embed/{{ block.video_id }}" 
            title="{{ block.title or 'YouTube video' }}"
            class="absolute top-0 left-0 w-full h-full"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
        </iframe>
    </div>
</div>
