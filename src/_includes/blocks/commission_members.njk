              <p class="text-xl font-bold text-gray-900">{{ block.head }}</p>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Secretary -->
        {% if block.secretary %}
        <div class="mb-6 pb-6 border-b-2 border-blue-200">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-indigo-600 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <span>üìù</span>
