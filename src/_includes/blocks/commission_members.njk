<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      {% if block.title %}
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-8 text-center">{{ block.title }}</h2>
      {% endif %}
      
      <div class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 rounded-2xl shadow-lg p-8 border-l-4 border-blue-600">
