<section class="py-12 md:py-16">
    <div class="container mx-auto px-4">
        {% if block.category_title %}
        <h2 class="text-2xl md:text-3xl font-heading font-bold text-gray-900 mb-8 relative inline-block">
            {{ block.category_title }}
            <span class="block h-1 w-full bg-accent/30 absolute bottom-0 left-0 -z-10 transform -rotate-1"></span>
        </h2>
        {% endif %}
        
        <div class="grid md:grid-cols-2 gap-6">
            {% for doc in block.documents %}
            <a href="{{ doc.url }}" target="_blank" rel="noopener noreferrer" 
               class="group bg-white p-6 rounded-xl shadow-md border border-gray-100 hover:shadow-xl hover:border-accent/30 transition-all duration-300 hover:-translate-y-1">
