{% set colorClasses = {
  'blue': 'bg-blue-600 border-blue-700',
  'green': 'bg-green-600 border-green-700',
  'purple': 'bg-purple-600 border-purple-700',
  'amber': 'bg-amber-600 border-amber-700',
  'teal': 'bg-teal-600 border-teal-700'
} %}

{% set variant = block.variant or 'green' %}
{% set bgColor = colorClasses[variant] or colorClasses['green'] %}

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      {% if block.title %}
        <h2 class="text-3xl md:text-4xl font-bold text-primary mb-8 text-center">{{ block.title }}</h2>
      {% endif %}
      
      <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl shadow-lg p-8 border-l-4 border-green-600">
        {% if block.meetings and block.meetings.length > 0 %}
        <div class="grid gap-4">
          {% for meeting in block.meetings %}
          <div class="flex items-center gap-4 bg-white rounded-xl p-5 shadow-sm border border-green-100 hover:shadow-md transition-all duration-200">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 {{ bgColor }} rounded-lg flex items-center justify-center text-white font-bold text-xl shadow-md border-2">
                {{ meeting.number }}
              </div>
            </div>
            <div class="flex-1">
              <p class="text-sm font-semibold text-green-600 uppercase tracking-wide mb-1">{{ meeting.label }}</p>
              <p class="text-xl font-bold text-gray-900">{{ meeting.date }}</p>
            </div>
            <div class="flex-shrink-0 text-green-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
