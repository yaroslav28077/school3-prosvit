<section class="py-12 md:py-24 overflow-hidden">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center gap-12 lg:gap-20">
            
            {# Image Side #}
            <div class="w-full md:w-1/2 relative group {{ 'order-2' if block.image_position == 'left' else 'order-1' }}">
                <div class="absolute inset-0 bg-accent/10 rounded-2xl transform translate-x-3 translate-y-3 transition-transform group-hover:translate-x-4 group-hover:translate-y-4"></div>
                <img src="{{ block.image }}" alt="{{ block.title }}" class="relative rounded-2xl shadow-xl w-full h-auto object-cover transform transition-transform duration-500 group-hover:-translate-y-1">
            </div>

            {# Text Side #}
            <div class="w-full md:w-1/2 {{ 'order-1' if block.image_position == 'left' else 'order-2' }}">
                {% if block.title %}
                <h2 class="text-3xl md:text-4xl font-heading font-bold text-gray-900 mb-6 relative inline-block">
                    {{ block.title }}
                    <span class="absolute bottom-1 left-0 w-1/3 h-2 bg-accent/20 -z-10"></span>
                </h2>
                {% endif %}
                
                <div class="prose prose-teal text-secondary leading-relaxed">
                    {{ block.body | safe }}
                </div>
            </div>

        </div>
    </div>
</section>
