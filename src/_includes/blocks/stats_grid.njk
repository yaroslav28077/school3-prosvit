{% set colorClasses = {
  'orange': 'from-yellow-50 to-orange-50 text-orange-600',
  'amber': 'from-yellow-50 to-amber-50 text-amber-600',
  'blue': 'from-blue-50 to-indigo-50 text-blue-600',
  'purple': 'from-purple-50 to-pink-50 text-purple-600'
} %}

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="prose prose-lg prose-teal mx-auto text-secondary">
      <div class="grid md:grid-cols-{{ block.columns or 2 }} gap-6">
        {% for stat in block.stats %}
          {% set statColor = stat.color or 'orange' %}
          {% set gradientClass = colorClasses[statColor] or colorClasses['orange'] %}
          
          <div class="bg-gradient-to-br {{ gradientClass }} p-6 rounded-xl shadow-lg">
            <div class="text-5xl font-bold mb-2">{{ stat.number }}</div>
            <div class="text-gray-700 font-semibold">{{ stat.label }}</div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
