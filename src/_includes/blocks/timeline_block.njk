{% set colorClasses = {
  'blue': 'bg-blue-500',
  'purple': 'bg-purple-500',
  'indigo': 'bg-indigo-500',
  'pink': 'bg-pink-500',
  'teal': 'bg-teal-500'
} %}

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="prose prose-lg prose-teal mx-auto text-secondary">
      <div class="space-y-4">
        {% for item in block.items %}
          {% set itemColor = item.color or 'blue' %}
          {% set badgeClass = colorClasses[itemColor] or colorClasses['blue'] %}
          
          <div class="flex items-start gap-4">
            <div class="{{ badgeClass }} text-white rounded-full w-12 h-12 flex items-center justify-center font-bold flex-shrink-0 text-sm">
              {{ item.year }}
            </div>
            <div class="bg-gray-50 p-4 rounded-lg flex-1">
              {{ item.description }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
